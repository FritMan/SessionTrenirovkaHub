<Page x:Class="Session1WPF.PagesEdit.EditLocationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Session1WPF.PagesEdit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditLocationsPage">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="LocationsStack">
        <GroupBox Header="Название:">
            <TextBox x:Name="NameTb" Text="{Binding Name}"/>
        </GroupBox>

        <GroupBox Header="Кол-во рядов:">
            <TextBox x:Name="KolvoRidovTb" Text="{Binding KolRidov}"/>
        </GroupBox>

        <GroupBox Header="Кол-во мест в ряду:">
            <TextBox x:Name="KolvoMestTb" Text="{Binding MestaVridu}"/>
        </GroupBox>

        <Button x:Name="OkBtn" Click="OkBtn_Click" Content="Ок"/>
        <Button x:Name="BackBtn" Click="BackBtn_Click" Content="Назад"/>
    </StackPanel>
</Page>
