<Page x:Class="Session1WPF.PagesEdit.SpacesEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Session1WPF.PagesEdit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SpacesEditPage">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" x:Name="SpacesStack">
        <GroupBox Header="Название:">
            <TextBox x:Name="NameTb" Text="{Binding Name}"/>
        </GroupBox>

        <GroupBox Header="Вместимость:">
            <TextBox x:Name="CapacityTb" Text="{Binding Capacity}"/>
        </GroupBox>

        <GroupBox Header="Описание:">
            <TextBox x:Name="DescriptionTb" Text="{Binding Description}"/>
        </GroupBox>


        <Button x:Name="OkBtn" Click="OkBtn_Click" Content="Ок"/>
        <Button x:Name="BackBtn" Click="BackBtn_Click" Content="Назад"/>
    </StackPanel>
</Page>
