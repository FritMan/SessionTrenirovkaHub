<Page x:Class="Session1WPF.PagesEdit.StudiosEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Session1WPF.PagesEdit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudiosEditPage">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="StudiosStack">

        <GroupBox Header="Название:">
            <TextBox x:Name="NameTb" Text="{Binding Name}"/>
        </GroupBox>


        <GroupBox Header="Описание:">
            <TextBox x:Name="DescriptionTb" Text="{Binding Description}"/>
        </GroupBox>


        <Button x:Name="OkBtn" Click="OkBtn_Click" Content="Ок"/>
        <Button x:Name="BackBtn" Click="BackBtn_Click" Content="Назад"/>
    </StackPanel>
</Page>
