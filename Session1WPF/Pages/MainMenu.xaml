<Page x:Class="Session1WPF.Pages.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Session1WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button x:Name="EventPart" Click="EventPart_Click" Content="Развлекательная деятельность" Width="200"/>
        <Button x:Name="EducPart" Click="EducPart_Click" Content="Образовательная деятельность" Width="200"/>
        <Button x:Name="CulturePart" Click="CulturePart_Click" Content="Культурно-просв. деятельность" Width="200"/>
        <Button x:Name="TestBtn" Click="TestBtn_Click" Content="Тест"/>
        <Label x:Name="FunLabel" Content="ООО Керамогранит Солнцево" Width="0"/> 
    </StackPanel>
</Page>
