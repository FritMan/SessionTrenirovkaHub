<Page x:Class="Session1WPF.Pages.EventMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Session1WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EventMenu">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button x:Name="SpacesBtn" Click="SpacesBtn_Click" Content="Пространства" Width="150"/>
        <Button x:Name="TypesEventBtn" Click="TypesEventBtn_Click" Content="Типы мероприятий" Width="150"/>
        <Button x:Name="LocationBtn" Click="LocationBtn_Click" Content="Локации" Width="150"/>
        <Button x:Name="EventBtn" Click="EventBtn_Click" Content="Мероприятия" Width="150"/>
    </StackPanel>
</Page>
